<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/pick_fragment"
    android:background="@color/Cyan_200"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- <com.pkmmte.view.CircularImageView
         android:id="@+id/view"
         android:src="@drawable/ffffff"
         android:layout_width="50dp"
         android:layout_height="50dp"
         app:border="true"
         app:border_color="@color/DeepRed"
         app:border_width="4dp"
         app:shadow="true" /> -->

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="4dp"
        android:layout_margin="10dp">




        <LinearLayout
            android:weightSum="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">




            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="0dip">


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dip">


                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="0dip"
                        android:layout_height="match_parent">

                        <com.pkmmte.view.CircularImageView
                            android:layout_centerInParent="true"
                            android:id="@+id/pick_red"
                            android:src="@drawable/ffffff"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:border="true"
                            app:border_color="@color/DeepRed"
                            app:border_width="4dp"
                            app:shadow="true" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="0dip"
                        android:layout_height="match_parent">

                        <com.pkmmte.view.CircularImageView
                            android:layout_centerInParent="true"
                            android:id="@+id/pick_blue"
                            android:src="@drawable/ffffff"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:border="true"
                            app:border_color="@color/DeepGrean"

                            app:border_width="4dp"
                            app:shadow="true" />


                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dip">


                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="0dip"
                        android:layout_height="match_parent">

                        <com.pkmmte.view.CircularImageView
                            android:layout_centerInParent="true"
                            android:id="@+id/pick_Green"
                            android:src="@drawable/ffffff"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:border="true"
                            app:border_color="@color/DeepBlue"
                            app:border_width="4dp"
                            app:shadow="true" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="0dip"
                        android:layout_height="match_parent">

                        <com.pkmmte.view.CircularImageView
                            android:layout_centerInParent="true"
                            android:id="@+id/pick_Brown"
                            android:src="@drawable/ffffff"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:border="true"
                            app:border_color="@color/DeepBrown"
                            app:border_width="4dp"
                            app:shadow="true" />


                    </RelativeLayout>


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="0dip">


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dip">


                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="0dip"
                        android:layout_height="match_parent">

                        <com.pkmmte.view.CircularImageView
                            android:layout_centerInParent="true"
                            android:id="@+id/pick_Pink"
                            android:src="@drawable/ffffff"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:border="true"
                            app:border_color="@color/DeepPink"
                            app:border_width="4dp"
                            app:shadow="true" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="0dip"
                        android:layout_height="match_parent">

                        <com.pkmmte.view.CircularImageView
                            android:layout_centerInParent="true"
                            android:id="@+id/pick_Gray"
                            android:src="@drawable/ffffff"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:border="true"
                            app:border_color="@color/DeepGray"
                            app:border_width="4dp"
                            app:shadow="true" />


                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dip">


                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="0dip"
                        android:layout_height="match_parent">

                        <com.pkmmte.view.CircularImageView
                            android:layout_centerInParent="true"
                            android:id="@+id/pick_Purple"
                            android:src="@drawable/ffffff"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:border="true"
                            app:border_color="@color/DeepPurple"
                            app:border_width="4dp"
                            app:shadow="true" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="0dip"
                        android:layout_height="match_parent">

                        <com.pkmmte.view.CircularImageView
                            android:layout_centerInParent="true"
                            android:id="@+id/pick_White"
                            android:src="@drawable/ffffff"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:border="true"
                            app:border_color="@color/DeepYellow"
                            app:border_width="4dp"
                            app:shadow="true" />


                    </RelativeLayout>


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>